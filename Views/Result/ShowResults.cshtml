@model LeagueTable.Models.LeagueTable
@{

    ViewBag.Title = "Show Results";
    var sortedLeague = Model.OrderTable();
    int count = 1;
}

<h2>League Table</h2>

<table  class="table table-striped">
    <thead>
        <tr>

            <th>Position</th>
            <th>Name</th>
            <th>MP</th>
            <th>W</th>
            <th>D</th>
            <th>L</th>
            <th>GF</th>
            <th>GA</th>
            <th>GD</th>
            <th> PTS</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in sortedLeague)
        {
           

            <tr>
                <td>@count</td>
                <td>@Html.ActionLink(item.Name,"ShowTeamResults","Result" ,new {team= item.Name },null )</td>
                <td>@item.Played</td>
                <td>@item.Wins  </td>
                <td>@item.Draws</td>
                <td>@item.Defeats</td>
                <td>@item.GoalsFor</td>
                <td>@item.GoalsAgainst</td>
                <td>@item.GoalDifference</td>
                <td>@item.Points</td>
            </tr>
            count++;
        }
    </tbody>
</table>


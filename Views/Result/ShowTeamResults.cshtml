@model IEnumerable<LeagueTable.Models.TeamResults>
@{
    ViewBag.Title = "ShowTeamResults";
}

<h2>Show Team Results</h2>

@ViewBag.Message
<p>
    @Html.ActionLink("Back", "GoBack","Result",null)</p>

<table class="table table-striped">
    <thead>
        <tr>

            <th>Date</th>
            <th>Home Team</th>
            <th>Away Team</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {


            <tr>
                <td>@item.MatchDate.ToShortDateString()</td>
                <td>@item.HomeTeam</td>
                <td>@item.AwayTeam</td>
                <td>@item.Score </td>
            </tr>
        }
    </tbody>
</table>
